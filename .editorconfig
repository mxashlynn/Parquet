#############################################################
# Project-wide Code Formatting Rules                        #
# See http://EditorConfig.org for information on this file. #
#############################################################

# This file is the top-most EditorConfig file.
root = true

################################################################
# All Files                                                    #
# These settings apply to the files we'll normally be editing. #
################################################################
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

########################################################
# Nonstandard Files                                    #
# Anything that needs special settings should go here. #
########################################################

# Markdown Files care about trailing spaces.
[*.md, markdown]
trim_trailing_whitespace = false

###################################################################
# Visual Studio Files                                             #
# These are auto-generated by Visual Studio.                      #
# The goal is to maintain VS's own rules to avoid needless diffs. #
###################################################################

# Visual Studio Solution Files
[*.{sln,sln.template}]
indent_style = tab
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

# Visual Studio Project Files
[*.{vcxproj,vcxproj.filters,csproj}]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8-bom
trim_trailing_whitespace = true
insert_final_newline = false

# Visual Studio Other Files
[*.{vbproj,vcproj,proj,projitems,shproj,xaml,tt,t4,ttinclude,props,targets,nuspec,resx,ruleset,vsixmanifest,vsct}]
end_of_line = crlf
indent_size = 2

# IDE0022: Use block body for methods
csharp_style_expression_bodied_methods = none

# CA1707: Identifiers should not contain underscores
dotnet_diagnostic.CA1707.severity = none
